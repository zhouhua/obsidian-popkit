{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES7"
    ],
    "outDir": "dist",
    "types": [
      "node",
      "obsidian-typings",
      "@codemirror/state",
      "@codemirror/view"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.d.ts",
    "*.mjs"
  ]
}